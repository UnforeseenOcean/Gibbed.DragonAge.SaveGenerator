<UserControl x:Class="Gibbed.DragonAge.SaveGenerator.View.CompanionPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="477"
             d:DesignWidth="500"
             Width="Auto"
             Height="Auto"
             VerticalContentAlignment="Top">
    <WrapPanel Orientation="Horizontal">
        <GroupBox Header="Recruitment">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding FollowerOptions}"
                              Focusable="False">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding DisplayName}"
                                      ToolTip="{Binding DisplayName}"
                                      IsChecked="{Binding IsSelected}"
                                      Foreground="White"
                                      SnapsToDevicePixels="True" />
                        </DataTemplate>

                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Zevran">
            <ItemsControl ItemsSource="{Binding ZevranResults}"
                          Focusable="False">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <RadioButton GroupName="Zevran"
                                     Content="{Binding DisplayName}"
                                     ToolTip="{Binding DisplayName}"
                                     IsChecked="{Binding IsSelected}"
                                     Foreground="White"
                                     SnapsToDevicePixels="True" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </GroupBox>
        <GroupBox Header="Romance">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding RomanceOptions}"
                              Focusable="False">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding DisplayName}"
                                      ToolTip="{Binding DisplayName}"
                                      IsChecked="{Binding IsSelected}"
                                      Foreground="White"
                                      SnapsToDevicePixels="True" />
                        </DataTemplate>

                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Isabella">
            <ItemsControl ItemsSource="{Binding IsabellaResults}"
                          Focusable="False">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <RadioButton GroupName="Isabella"
                                     Content="{Binding DisplayName}"
                                     ToolTip="{Binding DisplayName}"
                                     IsChecked="{Binding IsSelected}"
                                     Foreground="White"
                                     SnapsToDevicePixels="True" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </GroupBox>
    </WrapPanel>
</UserControl>